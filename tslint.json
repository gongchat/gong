{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "build/**/*.js",
      "config/**/*.js",
      "coverage/**/*.js",
      "dist/**/*.js",
      "electron/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "curly": [true, "ignore-same-line"],
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "quotemark": [true, "single", "jsx-double"],
    "no-unused-variable": false
  },
  "jsRules": {
    "curly": [true, "ignore-same-line"],
    "object-literal-sort-keys": false,
    "no-console": false
  }
}
