{
  "name": "gong",
  "version": "0.4.0",
  "description": "XMPP Client",
  "author": "Gong <gongxmpp@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gongchat/gong.git"
  },
  "main": "public/electron.js",
  "scripts": {
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "start": "concurrently \"cross-env BROWSER=none PORT=3100 npm run start:react\" \"wait-on http://localhost:3100 && npm run start:electron\" --kill-others",
    "test": "react-scripts test",
    "build": "react-scripts build",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "release:mac": "electron-builder build -m -p always",
    "release:linux-windows": "electron-builder build -l -w -p always"
  },
  "dependencies": {
    "@material-ui/core": "4.8.0",
    "@material-ui/icons": "4.5.1",
    "@material-ui/lab": "4.0.0-alpha.36",
    "@material-ui/styles": "4.7.1",
    "@techempower/react-governor": "0.7.0",
    "crypto-js": "3.1.9-1",
    "dictionary-en-us": "2.1.1",
    "electron-debug": "3.0.1",
    "electron-devtools-installer": "2.2.4",
    "electron-is-dev": "1.1.0",
    "electron-log": "4.0.0",
    "electron-store": "5.1.0",
    "electron-updater": "4.2.0",
    "keytar": "5.0.0",
    "marked": "0.8.0",
    "moment": "2.24.0",
    "notistack": "0.9.7",
    "nspell": "2.1.2",
    "react": "16.12.0",
    "react-dev-utils": "10.0.0",
    "react-dom": "16.12.0",
    "react-json-view": "1.19.1",
    "react-material-ui-form-validator": "2.0.9",
    "react-player": "1.14.2",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "sanitize-html": "1.20.1",
    "webfontloader": "1.6.28",
    "xmpp.js": "0.9.2"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/markdown-it": "0.0.9",
    "@types/marked": "0.7.2",
    "@types/moment": "2.13.0",
    "@types/react-dom": "16.9.4",
    "@types/react-router-dom": "5.1.3",
    "@types/sanitize-html": "1.20.2",
    "@types/webfontloader": "1.6.29",
    "concurrently": "5.0.2",
    "cross-env": "6.0.3",
    "electron": "7.1.9",
    "electron-builder": "22.2.0",
    "electron-rebuild": "1.8.8",
    "node-sass": "4.13.0",
    "react-scripts": "3.3.0",
    "typescript": "3.7.3",
    "wait-on": "3.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "engines": {
    "node": "12.14.0"
  },
  "build": {
    "nodeVersion": "12.14.0",
    "appId": "com.github.gongchat.gong",
    "productName": "Gong",
    "icon": "build/icons/",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gongchat",
        "repo": "gong"
      }
    ],
    "win": {
      "target": "NSIS",
      "icon": "build/icons/"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons/",
      "category": "Chat"
    },
    "mac": {
      "icon": "build/icons/"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
