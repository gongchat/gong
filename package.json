{
  "name": "gong",
  "version": "0.2.0",
  "description": "XMPP Client",
  "author": "Gong <gongxmpp@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gongchat/gong.git"
  },
  "main": "public/electron.js",
  "scripts": {
    "react": "react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none PORT=3100 npm run react\" \"wait-on http://localhost:3100 && electron .\" --kill-others",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "release:mac": "electron-builder build -m -p always",
    "release:linux-windows": "electron-builder build -l -w -p always",
    "test": "react-scripts test"
  },
  "dependencies": {
    "@material-ui/core": "3.9.3",
    "@material-ui/icons": "3.0.2",
    "@material-ui/lab": "3.0.0-alpha.30",
    "@material-ui/styles": "3.0.0-alpha.10",
    "@techempower/react-governor": "0.3.0",
    "crypto-js": "3.1.9-1",
    "electron-debug": "2.2.0",
    "electron-devtools-installer": "2.2.4",
    "electron-is-dev": "1.1.0",
    "electron-log": "3.0.5",
    "electron-store": "3.2.0",
    "electron-updater": "4.0.6",
    "keytar": "4.5.0",
    "marked": "0.6.2",
    "moment": "2.24.0",
    "notistack": "0.7.0",
    "react": "16.8.6",
    "react-dev-utils": "9.0.0",
    "react-dom": "16.8.6",
    "react-material-ui-form-validator": "2.0.8",
    "react-player": "1.11.0",
    "react-router": "5.0.0",
    "react-router-dom": "5.0.0",
    "sanitize-html": "1.20.0",
    "webfontloader": "1.6.28",
    "xmpp.js": "0.7.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/markdown-it": "0.0.7",
    "@types/marked": "0.6.5",
    "@types/moment": "2.13.0",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "4.3.2",
    "@types/sanitize-html": "1.18.3",
    "@types/webfontloader": "1.6.29",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "electron": "4.1.5",
    "electron-builder": "20.38.2",
    "electron-rebuild": "1.8.4",
    "node-sass": "4.11.0",
    "react-scripts": "3.0.0",
    "typescript": "3.4.5",
    "wait-on": "3.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "engines": {
    "node": "10.13.0"
  },
  "build": {
    "nodeVersion": "10.13.0",
    "appId": "com.github.gongchat.gong",
    "productName": "Gong",
    "icon": "build/icons/",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gongchat",
        "repo": "gong"
      }
    ],
    "win": {
      "target": "NSIS",
      "icon": "build/icons/"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons/"
    },
    "mac": {
      "icon": "build/icons/"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
