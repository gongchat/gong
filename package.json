{
  "name": "gong",
  "version": "0.1.3",
  "description": "XMPP Client",
  "author": "Gong <gongxmpp@gmail.com>",
  "main": "public/electron.js",
  "homepage": "./",
  "engines": {
    "node": "10.13.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "build-js": "react-scripts-ts build",
    "react": "npm-run-all -p start-js",
    "build": "npm-run-all build-js",
    "start": "concurrently \"cross-env BROWSER=none npm run react\" \"wait-on http://localhost:3000 && electron .\" --kill-others",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release:mac": "electron-builder build -m -p always",
    "release:linux-windows": "electron-builder build -l -w -p always",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@material-ui/core": "3.9.3",
    "@material-ui/icons": "3.0.2",
    "@material-ui/lab": "3.0.0-alpha.30",
    "@material-ui/styles": "3.0.0-alpha.10",
    "@reach/router": "1.2.1",
    "@techempower/react-governor": "0.3.0",
    "crypto-js": "3.1.9-1",
    "electron-debug": "^2.2.0",
    "electron-devtools-installer": "2.2.4",
    "electron-is-dev": "1.1.0",
    "electron-log": "3.0.5",
    "electron-store": "3.2.0",
    "electron-updater": "4.0.6",
    "keytar": "4.4.1",
    "markdown-it": "8.4.2",
    "markdown-it-emoji": "1.4.0",
    "moment": "2.24.0",
    "notistack": "0.6.1",
    "react": "16.8.6",
    "react-dev-utils": "8.0.0",
    "react-dom": "16.8.6",
    "react-material-ui-form-validator": "2.0.7",
    "react-player": "1.11.0",
    "sanitize-html": "1.20.0",
    "webfontloader": "1.6.28",
    "xmpp.js": "0.7.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/markdown-it": "0.0.7",
    "@types/moment": "2.13.0",
    "@types/reach__router": "1.2.4",
    "@types/react-dom": "16.8.4",
    "@types/sanitize-html": "1.18.3",
    "@types/webfontloader": "1.6.29",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "electron": "4.1.4",
    "electron-builder": "20.39.0",
    "node-sass-chokidar": "1.3.4",
    "npm-run-all": "4.1.5",
    "react-scripts": "2.1.8",
    "react-scripts-ts": "3.1.0",
    "typescript": "3.4.3",
    "wait-on": "3.2.0"
  },
  "build": {
    "nodeVersion": "10.13.0",
    "appId": "com.github.gongchat.gong",
    "productName": "Gong",
    "icon": "build/icons/",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gongchat",
        "repo": "gong"
      }
    ],
    "win": {
      "target": "NSIS",
      "icon": "build/icons/"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons/"
    },
    "mac": {
      "icon": "build/icons/"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
